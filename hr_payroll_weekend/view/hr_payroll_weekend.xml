			<field name="model">hr.payslip</field>
			<field name="inherit_id" ref="hr_payroll.view_hr_payslip_form" />
			<field name="arch" type="xml">
				<xpath expr="/form/sheet/group/field[@name='contract_id']" position='replace'>
