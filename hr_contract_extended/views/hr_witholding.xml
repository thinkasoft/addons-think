<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Declarando vista hr.contract.withoulding. Hereda de vista hr.contract  -->
    <record id="view_hr_contract__withoulding_from" model="ir.ui.view">
        <field name="name">hr.contract.withoulding</field>
        <field name="model">hr.contract</field>
        <field name="inherit_id" ref="hr_contract.hr_contract_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page string="Witholding">
                    <separator sting="Data" colspan="4"/>
                    <group col="4" >
                                <field name="cal_withol"/>
                                <field name="mod_income_wh"/>
                                <field name="mod_ins_health_wh"/>
                                <field name="mod_saving_wh"/>
                                <field name="inces_wh"/>
                    </group>
                </page>
            </xpath>
            <xpath expr="//field[@name='wage']" position="after">
                <field name="average_wage"/>
            </xpath>
        </field>
    </record>
</odoo>
